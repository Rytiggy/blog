{{yield}}


<!-- Hard coded if(s), find a way to make this dynamic at some point-->
	{{#if photos}}
		{{#each model.photos as |item index|}}
		<div class="display: inline-block;">
			<input value={{item.objectOne}} class='inline-button-admin'/>
			<input
				type="radio" 
				name="favorite"
				value={{item.objectTwo}} 
				class='inline-radio' checked/> 
		</div>
		{{/each}}

	{{/if}}
	{{#if steps}}
		{{#each model.steps as |item|}}
			{{input value=item}}
		{{/each}}
	{{/if}}
	{{#if ingredients}}
		{{#each model.ingredients as |item|}}
			amount:{{input value=item.objectOne}}
			ingredient:{{input value=item.objectTwo}}
		{{/each}}
	{{/if}}
	{{#if tags}}
		{{#each model.tags as |item|}}
			{{input value=item}}
		{{/each}}
	{{/if}}

	{{#if ingredients}}
		amount:{{input value=this.singleVal}}
		ingredient:{{input value=this.secondVal}}
	{{else}}
		{{input value=this.singleVal}}
	{{/if}}
	<button {{action "addField"}} class="btn">Add</button>
