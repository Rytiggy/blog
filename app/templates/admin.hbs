<div class="admin-view">

	<div class="side-menu">
		<ul class="side-menu-ul">
			<li {{action 'newPost'}}> New Post</li>
			<li {{action 'toggleEditPost'}} > All Post</li>
		</ul>
	</div>
	<div class="admin-body">
		{{#if allPost}}
		{{search-table}}
			{{item-table model=post  editPost=(action 'editPost') deletePost=(action 'deletePost')}}
	
		{{else}}
