		</div>
		<div class="input-group">
			{{add-multiple-input model=model type='tags' class="m-input"}}
			<label>Tags</label>
		</div>

		<div class="input-group">
			{{input type="text" value=prepTime  class="m-input"}}
			<label>Prep Time</label>
		</div>
		<div class="input-group">
			{{input type="text" value=cookTime  class="m-input"}}
			<label>Cook Time</label>
		</div>
		<div class="input-group">
			{{input type="text" value=recipeYield  class="m-input"}}
